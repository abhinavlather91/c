//print factorial of a small number

#include <stdio.h>
#include <math.h>


int main()
{
    int n;
    printf("enter the number:");
    scanf("%d",&n);
    int fact=1;
    for(int i = 1;i<=n;i++){
        fact=fact*i;
    }
    
    printf("final factorial %d",fact);
    
    
	
	 return 0;
}

//print table of a number in reverse order

#include <stdio.h>
#include <math.h>


int main()
{
    int n;
    printf("enter a number:");
    scanf("%d",&n);
    for(int i=10;i>=1;i--){
        printf("%d\n",n*i);
    }
    
	
	 return 0;
}

//sum of numbers from 5 to 50
#include <stdio.h>
#include <math.h>


int main()
{
    int sum=0;
    for(int i =5;i<=50;i++){
        sum=sum + i;
       
    }
     printf("sum is %d",sum);
	
	 return 0;
}

//print sum in a given range

#include<stdio.h>
int main(){
    
    int a ;
    printf ("enter a number:");
    scanf("%d",&a);
    
    int b;
    printf ("enter other number:");
    scanf("%d",&b);
    int sum=0;
    for(int i = a;i<=b;i++){
        sum=sum+i;
    }
    printf("%d",sum);
    return 0;
}


//printing sum of digits of a number

#include <stdio.h>
int main(){
    int n;
    printf("enter the number:");
    scanf("%d",&n);

    
    int sum = 0 ;
    int m;
    
    while(n>0){
        m=n%10;
        sum +=m;
        n=n/10;
    }
    printf("sum is = %d",sum);
    return 0;
}



