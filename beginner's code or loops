//characters using ascii
#include <stdio.h>


int main(){
    char ch1='G', ch2= 10;
    ch1 = ch1 + ch2;
    printf("%d\n",ch1);
    printf("%c",ch1 - ch2 - 4);
   
    
    return 0; 
}

//printing largest of 3 numbers using ternary operator 
#include <stdio.h>


int main(){
    int a ,b,c,max;
    printf("enter three numbers: ");
    scanf("%d%d%d",&a,&b,&c);
    
    
    max = (a>b && a>c) ? (a) : ( (b>c)?(b):(c) );
    printf(" biggest is %d\n",max);
   
    
    return 0; 
}



// printing table of any given number

#include <stdio.h>
#include <math.h>


int main()
{
    int n;
    printf("enter number:");
    scanf("%d",&n);
    
    for(int i =1;i<=10;i++){
        printf("%d \n",n*i);
    }
	
	 return 0;
}

//taking input from user until user enters multiple of 7


// Online C compiler to run C program online
#include <stdio.h>
#include <math.h>


int main()
{
    int n;
    
    do{
        printf("enter a number :");
        scanf("%d",&n);
        printf("%d\n",n);
        if(n%7==0){
            break;
        }
    }
        while(1);
        printf("thank you");
  
	
	 return 0;
    
}


//print number from 1 to 10 except 6
#include <stdio.h>
#include <math.h>


int main()
{
    for(int i =1;i<=10;i++){
        if(i==6){
            continue;
        }
        printf("%d\n",i);
    }
    
    
	
	 return 0;
    
}

