//function basic printing 

#include<stdio.h>
void hello(){
    printf("hello");
}
void namaste(){
    printf("namaste");
}
int main(){
    printf("enter b for britishers and i for indian:");
    char ch;
    scanf("%c",&ch);
    if(ch == 'i'){
        namaste();
    }
    else{
        hello();
    }
    return 0;
}

//printing table using function

#include <stdio.h>

void printTable(int n){
    for(int i=1;i<=10;i++){
        printf("%d\n",n*i);
    }
}

int main(){
    int n;
    printf("enter number: ");
    scanf("%d",&n);
    printTable(n);
    
    
    
    return 0;
}
//price after adding gst

#include <stdio.h>

void CalculatedPrice(float value){
    value=value + (0.18*value);
    printf("final price is : %f",value);
    
}
 
int main(){
    float value = 100.0;
    CalculatedPrice(value);
    
    return 0;
}

//printing area of cirlce,sqaure and rectangle

#include <stdio.h>

float squareArea(float side){
    return side * side;
}
float circleArea(float rad){
    return 3.14*rad*rad;
}
float rectangleArea(float a , float b){
    return a*b;
}
 
int main(){
    float side = 4;
    float a = 5.0;
    float b = 10.0;
    printf("area is: %f", squareArea(side));
    
    return 0;
}


//sum of digits of a number 

#include <stdio.h>


int main()
{
  int n,s;
  printf("input a number: ");
  scanf("%d",&n);
  	   
  s=sumofdigits(n);	 
  printf("Sum of Digits of %d ",sumofdigits());
  return 0;
}

int sumofdigits(int n)
{
  int s=0,rem=0;
  while(n>0)
  {
     rem=n%10;
     s+=rem;	  	  
     n=n/10;
  }
  return s;
}


//function to find square root of any given number

#include<stdio.h>
#include<math.h>

double findSQRT(double N){
    return sqrt(N);
}


int main(){
    int N=16;
    printf("%f", findSQRT(N));
    
    return 0;
}

//power of integer using power function

#include<stdio.h>
#include<math.h>
int main(){
    int base,exp,result;
    printf("enter a base number: ");
    scanf("%d",&base);
    printf("enter an exponent: ");
    scanf("%d",&exp);
    
    result= pow(base,exp);
    
    printf("%d to the power of %d is = %d" ,base,exp,result);
    
    return 0;
}

//write your own power function

#include<stdio.h>
#include<math.h>
int main(){
    int base,exp,result;
    printf("enter a base number: ");
    scanf("%d",&base);
    printf("enter an exponent: ");
    scanf("%d",&exp);
    
    result= power(base,exp);
    
    printf("%d to the power of %d is = %d" ,base,exp,result);
    
    return 0;
}
int power(int base, int exponent) {
  int result = 1;
  for (int i = 0; i < exponent; i++) {
    result =result * base;
  }
  return result;
}


